@{
    ViewBag.Title = "PlantAd";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="~/Content/Landingpagestyle.css" />
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet">
    <script>
    // Function to hide the success message after 5 seconds
         setTimeout(function() {
        var successMsg = document.getElementById('successMsg');
        if (successMsg) {
            successMsg.style.display = 'none';
        }
    }, 5000); // 5000 milliseconds = 5 seconds
    </script>
    @if (TempData["SuccessMsg"] != null)
    {
        <div id="successMsg" class="alert alert-success">
            @TempData["SuccessMsg"]
        </div>
    }
   
</head>
<body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">

            <a class="navbar-brand">
                <img src="~/Resors/logo.png" alt="Logo" class="logo">
               Plant 'a'D
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Shop</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Blog">Blog</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <header>

        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active" style="background-image: url('../Resors/plantshop.png')">
                    <div class="carousel-caption text-center">
                        <h1 class="title">Welcome to Plant Shop</h1>
                        <p class="description">Find the perfect plants for your home</p>
                    </div>
                </div>

            </div>
        </div>
    </header>

    
        <!-- Centered button container -->
        <div class="centered-container">
            <a href="/Home/Login"><button>Login</button></a>
            <a href="/Home/SignUp"><button>Get Started</button></a>
        </div>
    

    <!-- Services Section -->
    <section>
        <div class="container">
            <h2 class="text-center mb-4">Our Services</h2>
            <div class="row">
                <div class="col-sm-4">
                    <div class="text-center mb-4">
                        <svg class="lnr services-icon">
                            <use xlink:href="#lnr-leaf"></use>
                        </svg>
                        <h4>Wide Plant Selection</h4>
                        <p>Explore a wide variety of indoor and outdoor plants.</p>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="text-center mb-4">
                        <svg class="lnr services-icon">
                            <use xlink:href="#lnr-clock"></use>
                        </svg>
                        <h4>Fast Delivery</h4>
                        <p>Get your plants delivered quickly and safely to your doorstep.</p>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="text-center mb-4">
                        <svg class="lnr services-icon">
                            <use xlink:href="#lnr-heart"></use>
                        </svg>
                        <h4>Expert Advice</h4>
                        <p>Receive expert tips and guidance for plant care and maintenance.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer class="footer">
        <div class="footer-content">
            <div class="row">
                <div class="col-md-6">
                    <h2><b>Buy some Good Plants</b></h2>
                    <p>You can look some goods plants here</p>
                </div>
                <div class="col-md-6">
                    <h2><b>PlantShop anytime, anywhere</b></h2>
                    <p>The PlantShop will send any plants you have bought with care and deliver it fast as posssible.</p>
                </div>
            </div>
        </div>
    </footer>
   

    <!-- Bootstrap JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</body>

</html>
